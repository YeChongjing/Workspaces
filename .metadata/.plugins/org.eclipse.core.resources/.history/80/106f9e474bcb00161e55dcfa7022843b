package dao.impl;

import java.sql.SQLException;
import java.sql.ResultSet;


import dao.BaseDao;
import dao.UserDao;
import entity.User;

public class UserDaoImpl extends BaseDao implements UserDao {
	@Override
	public void addUser(User user){
		String sql="insert int USERS(username,password) values(?,?)";
		setSql(sql);
		createConnect();
		try{
			getpStmt().setString(1,user.getUsername());
			getpStmt().setString(2,user.getPassword());
			getpStmt().executeUpdate();
		}catch(SQLException e){
			e.printStackTrace();
		}
		CloseAll();
	}
	public static void main(String[] args){
		User user=new User();
		user.setUsername("叶崇京");
		user.setPassword("201558234021");
		new UserDaoImpl().addUser(user);
	}
	@Override
	public boolean findUser(User user) {
		// TODO Auto-generated method stub
		String sql = "select * from USERS where username=? and password=?";
		setSql(sql);
		createConnect();
		try{
			getpStmt().setString(1,user.getUsername());
			getpStmt().setString(2,user.getPassword());
			ResultSet rSet = getpStmt().executeQuery();
			if(rSet.next()){
				return true;
			}
		}catch(SQLException e){
			e.printStackTrace();
		}
		return false;
	}

	
	
	
}
